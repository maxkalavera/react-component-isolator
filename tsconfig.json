{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": [ "es6", "dom" ],
    "jsx": "react",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "baseUrl": "./",
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "example_project",
    "rollup.config.js"
  ],
}